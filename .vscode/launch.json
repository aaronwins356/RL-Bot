{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CLI tick",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/cli.py"
    },
    {
      "name": "Scenario runner",
      "type": "python",
      "request": "launch",
      "module": "scenarios.run",
      "args": ["--mechanic", "aerial", "--seed", "0"]
    },
    {
      "name": "GUI",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/run_gui.py"
    },
    {
      "name": "RLBot entry",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py"
    },
    {
      "name": "Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-q"]
    }
  ]
}
